{
  "name": "auth",
  "version": "1.0.0",
  "description": "Authentication microservice for our social media app.",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint src",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "start": "NODE_ENV=production ts-node src/index.ts",
    "start:dev": "nodemon src/index.ts",
    "test": "jest",
    "test:watch": "jest --verbose --watchAll --no-cache --runInBand",
    "tsc:check": "tsc --noEmit"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./src/test-utils/setup-after-env.ts"
    ]
  },
  "keywords": [],
  "author": "Lauro Fialho MÃ¼ller",
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.20.1",
    "dotenv-safe": "8.2.0",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "express-validator": "6.14.2",
    "mongodb-memory-server": "6.9.6",
    "mongoose": "5.13.15",
    "nodemailer": "6.8.0",
    "nodemon": "2.0.20",
    "ts-node": "9.1.1",
    "typescript": "4.3.5"
  },
  "devDependencies": {
    "@types/dotenv-safe": "8.1.2",
    "@types/express": "4.17.14",
    "@types/mongoose": "5.11.96",
    "@types/node": "14.18.32",
    "@types/nodemailer": "6.4.6",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "3.4.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "supertest": "6.3.1",
    "ts-jest": "26.5.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier:fix",
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test && npm run tsc:check"
    }
  }
}
