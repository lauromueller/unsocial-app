{
  "name": "auth",
  "version": "1.0.0",
  "description": "Authentication microservice for our social media app.",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint src",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "start": "NODE_ENV=production ts-node src/index.ts",
    "start:dev": "nodemon src/index.ts",
    "test": "jest",
    "test:watch": "jest --verbose --watchAll --no-cache --runInBand",
    "tsc:check": "tsc --noEmit"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./src/test-utils/setup-after-env.ts"
    ]
  },
  "keywords": [],
  "author": "Lauro Fialho MÃ¼ller",
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.19.0",
    "dotenv-safe": "8.2.0",
    "express": "4.17.1",
    "express-async-errors": "3.1.1",
    "express-validator": "6.9.2",
    "mongodb-memory-server": "6.9.2",
    "mongoose": "5.10.19",
    "nodemailer": "6.4.17",
    "nodemon": "2.0.6",
    "ts-node": "9.0.0",
    "typescript": "4.1.2"
  },
  "devDependencies": {
    "@types/dotenv-safe": "8.1.1",
    "@types/express": "4.17.11",
    "@types/mongoose": "5.10.1",
    "@types/node": "14.14.21",
    "@types/nodemailer": "6.4.0",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "eslint": "7.18.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "2.2.0",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier:fix",
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  }
}
